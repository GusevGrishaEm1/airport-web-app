<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ViewPerson</servlet-name>
        <servlet-class>servlet.person.ViewPerson</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreatePerson</servlet-name>
        <servlet-class>servlet.person.CreatePerson</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeletePerson</servlet-name>
        <servlet-class>servlet.person.DeletePerson</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UpdatePerson</servlet-name>
        <servlet-class>servlet.person.UpdatePerson</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewPerson</servlet-name>
        <url-pattern>/persons</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeletePerson</servlet-name>
        <url-pattern>/persons/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UpdatePerson</servlet-name>
        <url-pattern>/persons/update</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreatePerson</servlet-name>
        <url-pattern>/persons/create</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>persons/persons.jsp</welcome-file>
    </welcome-file-list>

</web-app>